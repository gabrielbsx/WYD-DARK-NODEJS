<%- contentFor('body') %>
<%- include('../partials/message.ejs') %>
<div class="h2"><span><%- subtitle %></span></div>
<div class="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <form method="POST">
                    <div class="form-group" style="margin-bottom: 2em;">
                        <label class="title" style="margin-bottom: 0.3em;">Nome</label>
                        <input pattern="[A-Za-z ]{4,16}" name="name" type="text" class="form-control" placeholder="Digite seu nome">
                    </div>
                    <div class="form-group" style="margin: 2em 0;">
                        <label class="title" style="margin-bottom: 0.3em;">E-mail</label>
                        <input name="email" type="email" class="form-control" placeholder="Digite seu e-mail">
                    </div>
                    <div class="form-group" style="margin: 2em 0;">
                        <label class="title" style="margin-bottom: 0.3em;">Usuário</label>
                        <input pattern="[A-Za-z0-9]{4,12}" name="user" type="text" class="form-control" placeholder="Digite seu usuário">
                    </div>
                    <div class="form-group" style="margin: 2em 0;">
                        <label class="title" style="margin-bottom: 0.3em;">Senha</label>
                        <input pattern="[A-Za-z0-9]{4,12}" name="pass" class="form-control" type="password" placeholder="Digite sua senha">
                    </div>
                    <div class="form-group" style="margin: 2em 0;">
                        <label class="title" style="margin-bottom: 0.3em;">Confirmar senha</label>
                        <input pattern="[A-Za-z0-9]{4,12}" name="pass2" class="form-control" type="password" placeholder="Digite sua senha novamente">
                    </div>
                    <div class="form-group flex" style="margin-top: 2em;">
                        <button type="submit" class="" style="font-size: 1.2em;margin: 0 auto!important;">
                            Criar conta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>